.nested-fields.form-row.align-items-center.mb-3.mb-sm-1
  .col-sm-3
    .form-row
      .col-2.d-sm-none= f.label :kind, class: 'col-form-label-sm'
      .col-10.col-sm-12
        = f.collection_select :kind, CreatorSite.kinds, :first, ->(s) { CreatorSite.human_attribute_enum_value :kind, s.first },
          { include_blank: true }, class: 'form-control form-control-sm'
  .col-sm-5
    .form-row
      .col-2.d-sm-none= f.label :url, class: 'col-form-label-sm'
      .col-10.col-sm-12= f.url_field :url, class: 'form-control form-control-sm', placeholder: 'https://'
  .col-sm-4
    .d-sm-flex.align-items-center
      .form-row.flex-grow-1.mr-sm-1
        .col-2.d-sm-none= f.label :name, class: 'col-form-label-sm'
        .col-10.col-sm-12= f.text_field :name, class: 'form-control form-control-sm'
      = link_to_remove_association f, class: 'text-danger' do
        .text-right.text-sm-left
          %i.fa.fa-times.fa-fw
          %span.d-sm-none= t('admin.btn.destroy')
